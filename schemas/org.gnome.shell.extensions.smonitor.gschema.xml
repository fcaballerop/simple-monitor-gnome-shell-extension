<?xml version="1.0" encoding="UTF-8"?>
<schemalist gettext-domain="gse-sensors">

  <schema id="org.gnome.shell.extensions.smonitor" path="/org/gnome/shell/extensions/smonitor/">

    <key type="i" name="num-procs">
      <default>10</default>
      <summary>Number of processes to show</summary>
      <description>Number of processes to show</description>
    </key>

    <key type="b" name="mem-perc">
      <default>true</default>
      <summary>Show memory percentage</summary>
      <description>True for percentage, wrong for memory used</description>
    </key>

    <key type="b" name="top-or-ps">
        <default>true</default>
        <summary>Get cpu usage from ps or top</summary>
        <description>ps shows cumulative usage of a process, top shows instant usage</description>
    </key>

    <key type="i" name="sec-update">
      <default>2</default>
      <summary>Show memory percentage</summary>
      <description>True for percentage, wrong for memory used</description>
    </key>
  </schema>
</schemalist>
